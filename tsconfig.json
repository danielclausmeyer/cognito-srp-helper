{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "src/",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
